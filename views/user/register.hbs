<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script>
  $(document).ready(function() {
    $("form").submit(function(event) {
      var errorMessageElement = $("#errorMessage");
      errorMessageElement.text(""); // Clear previous error messages

      // Validate Name
      var name = $("#reg-fname").val();
      if (name.length < 4) {
        errorMessageElement.text("Name should be more than 4 characters.");
        event.preventDefault();
        return;
      }

      // Validate Email
      var email = $("#reg-email").val();
      if (email.length < 5 || email.length > 64) {
        errorMessageElement.text("Email should be between 5 and 64 characters.");
        event.preventDefault();
        return;
      }

      // Validate Password
      var password = $("#reg-password").val();
      if (password.length < 5) {
        errorMessageElement.text("Password should be more than 4 characters.");
        event.preventDefault();
        return;
      }

      // Validate Phone Number
      var phone = $("#reg-lname").val();
      if (phone.length !== 10 || isNaN(phone)) {
        errorMessageElement.text("Phone number should be 10 characters and only numeric.");
        event.preventDefault();
        return;
      }
    });

    // Toggle Password Visibility
    $("#togglePassword").click(function() {
      var passwordInput = $("#reg-password");
      var type = passwordInput.attr("type") === "password" ? "text" : "password";
      passwordInput.attr("type", type);
    });
  });
</script>
