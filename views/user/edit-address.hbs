{{> header}}

<div class="app-content">

  <!--====== Section 1 ======-->
  <div class="u-s-p-y-6">

    <!--====== Section Content ======-->
    <div class="section__content">
      <div class="container">
        <div class="breadcrumb">
          <div class="breadcrumb__wrap">
            <ul class="breadcrumb__list">
              <li class="has-separator">

                <a href="index.html">Home</a></li>
              <li class="is-marked">

                <a href="dash-address-edit.html">My Account</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!--====== End - Section 1 ======-->

  <!--====== Section 2 ======-->
  <div class="u-s-p-b-6">

    <!--====== Section Content ======-->
    <div class="section__content">
      <div class="dash">
        <div class="container">
          <div class="row">
            <div class="col-lg-9 col-md-12">
              <div
                class="dash__box dash__box--shadow dash__box--radius dash__box--bg-white"
              >
                <div class="dash__pad-2">
                  <h1 class="dash__h1 u-s-m-b-14">Edit Address</h1>

                  <span class="dash__text u-s-m-b-30">We need an address where
                    we could deliver products.</span>
                  <form class="dash-address-manipulation" action="/user/editAddress/{{address._id}}" method="post">
                    <div class="gl-inline">
                      <div class="u-s-m-b-30">

                        <label class="gl-label" for="address-fname">FIRST NAME :</label>

                       <span>{{user.name}}</span></div>
                      <div class="u-s-m-b-30">

                        <label class="gl-label" for="address-lname">PHONE :</label>

                       <span>{{user.phone}}</span></div>
                    </div>
                    <div class="gl-inline">
                      <div class="u-s-m-b-30">

                        <label class="gl-label" for="address-phone">HOUSE NAME *</label>

                        <input
                          class="input-text input-text--primary-style"
                          type="text"
                          name="houseName"
                          value="{{address.houseName}}"
                          placeholder="House name"
                          id="address-phone"
                        /></div>
                      <div class="u-s-m-b-30">

                        <label class="gl-label" for="address-street">STREET
                           *</label>

                        <input
                          class="input-text input-text--primary-style"
                          type="text"
                          name="street"
                          value="{{address.street}}"
                          id="address-street"
                          placeholder=" Street"
                        /></div>
                    </div>
                    <div class="gl-inline">
                      <div class="u-s-m-b-30">

                        <label class="gl-label" for="address-street">CITY
                           *</label>

                        <input
                          class="input-text input-text--primary-style"
                          type="text"
                          name="city"
                          value="{{address.city}}"
                          id="address-street"
                          placeholder=" City"
                        />
                      </div>
                     <div class="u-s-m-b-30">

                        <label class="gl-label" for="address-street">ZIP/POSTAL
                          CODE *</label>

                        <input
                          class="input-text input-text--primary-style"
                          type="text"
                          name="pincode"
                          value="{{address.pincode}}"
                          id="address-postal"
                          placeholder="Zip/Postal Code"
                        /></div>
                    </div>
                    

                    <div>

                           <button
                            class="btn btn--e-brand-b-2 btn-light btn-color-light"
                            data-toggle="modal" data-target="#successModal"
                            style="color: white;"
                            type="submit"
                          >
                            SAVE
                          </button>
                        </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!--====== End - Section Content ======-->
  </div>
  <!--====== End - Section 2 ======-->
</div>

<div class="modal fade" id="successModal" tabindex="-1" role="dialog" aria-labelledby="successModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="successModalLabel">Address Updated Successfully</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Your address has been updated successfully.
      </div>
      <div class="modal-footer">
        <a href="/user/edit_profile" class="btn btn-secondary">Okay</a>
      </div>
    </div>
  </div>
</div>

{{> footer}}