<div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
    data-sidebar-position="fixed" data-header-position="fixed">
    {{> sidebar}}
    <div class="body-wrapper">
    {{> adminHeader}}
          <div class="container-fluid">
        <div class="container-fluid">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title fw-semibold mb-4">Products</h5>
              <div class="col-lg-8 d-flex align-items-stretch">
            {{!-- <div class="card w-100"> --}}
              <div class="card-body p-4">
              <div class="input-group rounded">
                <input type="search" class="form-control rounded" id="datatable-search-input" placeholder="Search" aria-label="Search" aria-describedby="search-addon" />
                <span class="input-group-text border-0" id="search-addon">
                  <i class="fas fa-search"></i>
                </span>
              </div>
                {{!-- <h5 class="card-title fw-semibold mb-4">Recent Transactions</h5> --}}
                <div class="table-responsive">
                  
                  <table class="table text-nowrap mb-0 align-middle">
                    <thead class="text-dark fs-4">
                      <tr>
                        <th class="border-bottom-0">
                          <h6 class="fw-semibold mb-0">Image</h6>
                        </th>
                        <th class="border-bottom-0">
                          <h6 class="fw-semibold mb-0">Name</h6>
                        </th>
                        <th class="border-bottom-0">
                          <h6 class="fw-semibold mb-0">Brand</h6>
                        </th>
                        <th class="border-bottom-0">
                          <h6 class="fw-semibold mb-0">Category</h6>
                        </th>
                        <th class="border-bottom-0">
                          <h6 class="fw-semibold mb-0">Stock</h6>
                        </th>
                        <th class="border-bottom-0">
                          <h6 class="fw-semibold mb-0">Price</h6>
                        </th>
                        <th class="border-bottom-0">
                          <h6 class="fw-semibold mb-0">Edit</h6>
                        </th>
                        <th class="border-bottom-0">
                          <h6 class="fw-semibold mb-0">Delete</h6>
                        </th>
                      </tr>
                    </thead>
                    {{#each products}}
                    <tbody>
                      <tr>
                        <td class="border-bottom-0"><img
                              class="u-img-fluid"
                              src="{{this.image}}"
                              alt=""
                            /></td>
                        <td class="border-bottom-0">
                            <h6 class="fw-semibold mb-1">{{this.name}}</h6>
                            {{!-- <span class="fw-normal">Web Designer</span>                           --}}
                        </td>
                        <td class="border-bottom-0">
                          <p class="mb-0 fw-normal">{{this.brand}}</p>
                        </td>
                        <td class="border-bottom-0">
                          <p class="mb-0 fw-normal">{{this.category}}</p>
                        </td>
                        <td class="border-bottom-0">
                          <div class="d-flex align-items-center gap-2">
                            <span class="badge bg-primary rounded-3 fw-semibold">{{this.countInStock}}</span>
                          </div>
                        </td>
                        <td class="border-bottom-0">
                          <h6 class="fw-semibold mb-0 fs-4">â‚¹{{this.price}}</h6>
                        </td>
                        <td class="border-bottom-0">
                          <a href="/admin/editProduct/{{this._id}}" class="fw-semibold mb-0 fs-4"><i class="far fa-pen-to-square"></i></a>
                        </td>
                        <td class="border-bottom-0">
                          <a href="/admin/deleteProduct/{{this._id}}" class="fw-semibold mb-0 fs-4"><i class="far fa-trash-can" style="color: #ea191d"></i></a>
                        </td>
                      </tr> 
                    </tbody>
                  {{/each}}
                  </table>
                </div>
              </div>
            {{!-- </div> --}}
          </div>
          </div>
        </div>
      {{!-- </div> --}}
    </div>

    

</div>

